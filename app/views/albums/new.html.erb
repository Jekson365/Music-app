<div class='sign-form var2'>
    <%= form_with model: @album do |form| %>
    <h1>Create new Album, Beatch!</h1>
    <div class='row'>
        <div class="col">

            <%= form.label :title %>
            <%= form.text_field :title, class: 'form-control' %>
            
        </div>

        <div class="col">

            <%= form.label :year %>
            <%= form.number_field :year, class: 'form-control' %>

        </div>
    </div>

    <div class='row'>
        <div class="col">
            <%= form.label :song_count %>
            <%= form.number_field :song_count, class: 'form-control' %>
            
        </div>
    </div>


  <div class="form-group">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
</div>
