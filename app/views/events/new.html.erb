        <div class="col">

            <%= form.label :title %>
            <%= form.text_field :title, class: 'form-control' %>
            
        </div>



        <div class="col">

            <%= form.label :ticket_price %>
            <%= form.number_field :ticket_price, class: 'form-control' %>

        </div>

    </div>

    <div class='row'>

        <div class="col">

            <%= form.label :location %>
            <%= form.text_field :location, class: 'form-control' %>

        </div>
          <div class="col w-100 dasdasdcxa">

            <%= form.label :date %>
            <%= form.datetime_field :date, class: 'form-control' %>

        </div>

    </div>

    <div class='row'>
    </div>


